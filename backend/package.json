{
  "name": "aurora-backend",
  "version": "1.0.0",
  "description": "Aurora情感AI后端服务",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "start:api": "node src/services/api-gateway/server.js",
    "start:api-only": "node start-api-only.js",
    "start:emotion": "python src/services/emotion-service/main.py",
    "start:chat": "node src/services/chat-service/server.js",
    "start:auth": "node src/services/auth-service/server.js",
    "test": "jest",
    "test:auth": "node test-auth.js",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "build": "npm run lint && npm run test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "aurora",
    "emotion-ai",
    "chatbot",
    "nlp",
    "machine-learning"
  ],
  "author": "Aurora Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "mongoose": "^8.0.3",
    "socket.io": "^4.7.4",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/aurora-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/aurora-backend/issues"
  },
  "homepage": "https://github.com/your-org/aurora-backend#readme"
}
